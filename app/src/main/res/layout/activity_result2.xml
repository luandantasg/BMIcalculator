<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity2">


    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@color/purple_700"
        android:text="YOUR BMI IS:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/textview_Result"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        tools:text="hello world" />
    
    <TextView
        android:id="@+id/textview_Classification"
        android:layout_margin="8dp"
        tools:text="Classification: normal"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:text="CHECK THE TABLE BELOW:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="16dp"
        android:text="BELOW 18,5 = UNDERWEIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="16dp"
        android:text="BETWEEN 18,5 and 24,9 = NORMAL "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="16dp"
        android:text="BETWEEN 25,0 and 29,9 = OVERWEIGHT LEVEL 1 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="16dp"
        android:text="BETWEEN 30,0 and 39,9 = OBESITY LEVEL 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="16dp"
        android:text="ABOVE 40,0 = EXTREME OBESITY LEVEL 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>